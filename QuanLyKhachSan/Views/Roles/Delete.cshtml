@using QuanLyKhachSan.Models;
@model QuanLyKhachSan.Models.Role

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h3>Are you sure you want to delete this?</h3>

                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="@Url.Action("Create", new { Action ="Create" })">New User</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">

                <div>

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.permission)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.permission)
                        </dd>
                        <dt>
                            Permission
                        </dt>
                        <dd>
                            <ul>
                                @foreach (Permission_Role per in Model.Permission_Role.ToList())
                                {

                                    <li>@per.Permission.name</li>

                                }
                            </ul>

                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@using QuanLyKhachSan.Models;
@model QuanLyKhachSan.Models.Role

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Detail Role
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="@Url.Action("Create", new { Action ="Create" })">New User</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <div>

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.permission)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.permission)
                        </dd>

                        <dt>
                            Permission
                        </dt>
                        <dd>
                            <ul>
                                @foreach (Permission_Role per in Model.Permission_Role.ToList())
                                {

                                    <li>@per.Permission.name</li>

                                }
                            </ul>

                        </dd>

                    </dl>
                </div>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        </div>
    </div>
</div>
@model QuanLyKhachSan.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout_Site.cshtml";
}

<!-- registration -->
<div class="main-1">
    <div class="container">
        <form method="post" action="@Url.Action("register", new { Controller = "Home", Action="register"  })">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="register">
                <div class="register-top-grid">
                    <h3>PERSONAL INFORMATION</h3>
                    <div class="wow fadeInRight" data-wow-delay="0.4s">
                        <span>Full Name<label>*</label></span>
                        @Html.EditorFor(model => model.fullname)
                        @Html.ValidationMessageFor(model => model.fullname, "", new { @class = "text-danger" })
                    </div>

                    <div class="wow fadeInRight" data-wow-delay="0.4s">
                        <span>Address<label>*</label></span>
                        @Html.EditorFor(model => model.address)
                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                    </div>
                    <div class="wow fadeInRight" data-wow-delay="0.4s">
                        <span>Phone Number<label>*</label></span>
                        @Html.EditorFor(model => model.phone)
                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="wow fadeInRight" data-wow-delay="0.4s">
                        <span>Birthday<label>*</label></span>
                        <input type="date" name="birthday" style="border: 1px solid #EEE;outline-color: #6cbc35;width: 96%; font-size: 1em; padding: 0.5em;" value="" />
                        @Html.ValidationMessageFor(model => model.birthday, "", new { @class = "text-danger" })
                    </div>
                    <div class="wow fadeInRight" data-wow-delay="0.4s">
                        <span>Phone Number<label>*</label></span>
                        <select class="show-sex" name="sex" style="border: 1px solid #EEE;outline-color: #6cbc35;width: 96%; font-size: 1em; padding: 0.5em;">
                            <option value="false">Nữ</option>
                            <option value="true">Nam</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.sex, "", new { @class = "text-danger" })
                    </div>
                    <div class="wow fadeInRight" data-wow-delay="0.4s">
                        <span>People ID<label>*</label></span>
                        @Html.EditorFor(model => model.people_id)
                        @Html.ValidationMessageFor(model => model.people_id, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>
                <div class="register-bottom-grid">
                    <h3>LOGIN INFORMATION</h3>
                    <div class="wow fadeInLeft" data-wow-delay="0.4s">
                        <span>User Name<label>*</label></span>
                        @Html.EditorFor(model => model.username)
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    </div>
                    <div class="wow fadeInRight" data-wow-delay="0.4s">
                        <span>Email Address<label>*</label></span>
                        @Html.EditorFor(model => model.email)
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                    <div class="wow fadeInLeft" data-wow-delay="0.4s">
                        <span>Password<label>*</label></span>
                        @Html.EditorFor(model => model.password)
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                    <div class="wow fadeInRight" data-wow-delay="0.4s">
                        <span>Confirm Password<label>*</label></span>
                        <input name="repassword" type="password">
                    </div>
                </div>

                <div class="clearfix"> </div>
                <div class="register-but">
                    <input class="btn btn-default" type="submit" value="submit">
                    <div class="clearfix"> </div>
                </div>
            </div>
        </form>

    </div>
</div>
<!-- registration -->